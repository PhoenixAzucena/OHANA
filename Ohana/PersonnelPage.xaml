<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ohana.PersonnelPage"
             >
    <StackLayout>
        <ListView x:Name="MyListView" ItemsSource="{Binding EmergencyNotifications}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding UserName}" Detail="{Binding Location}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>